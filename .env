# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
MONGO_URI=mongodb://localhost:27017/body_measurements
MONGO_DBNAME=body_measurements

# Computer Vision Settings
CV_CONFIDENCE_THRESHOLD=0.5
CV_MIN_DETECTION_CONFIDENCE=0.5
CV_MIN_TRACKING_CONFIDENCE=0.5

# Measurement Settings
DEFAULT_UNITS=inches
REFERENCE_HEIGHT_PIXELS=500
AVERAGE_HUMAN_HEIGHT_INCHES=68

# PDF Generation Settings
PDF_COMPANY_NAME=TailorMeasure AI
PDF_COMPANY_ADDRESS=Professional Tailoring Solutions

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance
CLEANUP_INTERVAL_HOURS=24
MAX_TEMP_FILE_AGE_HOURS=1

# Port Configuration
PORT=5000